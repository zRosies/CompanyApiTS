{
  "swagger": "2.0",
  "info": {
    "title": "Sample API",
    "version": "1.0.0"
  },
  "paths": {
    "/secure-route": {
      "get": {
        "summary": "Secure Route",
        "description": "Access to this route requires authentication.",
        "security": [
          {
            "OAuth2": ["read"]
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "OAuth2": {
      "type": "oauth2",
      "tokenUrl": "https://your-auth-provider.com/oauth/token",
      "flow": "password",
      "scopes": {
        "read": "Read access"
      }
    }
  }
}